        swal({
            title: "确认要删除吗?",
            text: "您将要删除此条信息!",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "是的, 删除它!",
            closeOnConfirm: false
        }, function () {
            swal("已删除!", "您的此条记录已被删除.", "success");
        });
    });

    $('#data_1 .input-group.date').datepicker({
        todayBtn: "linked",
        keyboardNavigation: false,
        forceParse: false,
        calendarWeeks: true,
        autoclose: true
