                            <div class="col-lg-4">
                                <input type="email" placeholder="Email" class="form-control">
                            </div>
                        </div>
                        <div class="form-group col-lg-12">
                            <label class="col-lg-2 control-label">住址:</label>
                            <div class="col-lg-10">
                                <input type="email" placeholder="Email" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4" style="width: 330px;height: 300px;border:1px solid red;">
