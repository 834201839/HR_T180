
@{
    ViewBag.Title = "PeiXunCreateFuHe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/plugins/datapicker/datepicker3.css" rel="stylesheet">
<link href="~/Content/css/plugins/daterangepicker/daterangepicker-bs3.css" rel="stylesheet">
<script src="~/Content/js/plugins/datapicker/bootstrap-datepicker.js"></script>

<div class="row">

    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>培训复核</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="form_basic.html#" aria-expanded="false">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="form_basic.html#">Config option 1</a>
                        </li>
                        <li>
                            <a href="form_basic.html#">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content" style="display: block;">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="col-lg-1 control-label">培训名称:</label>

                        <div class="col-lg-11"><input type="text" placeholder="" class="form-control"></div>
                    </div>

                    <div class="form-group ">

                        <label class="col-lg-1 control-label">培训讲师:</label>
                        <div class="col-lg-4">
                            <input type="text" placeholder="" class="form-control">
                        </div>

                        <div class="col-lg-7">

                            <label class="col-lg-2 control-label">
                                登记时间:
                            </label>
                            <div class="form-group" id="data_5">
                                <div class="input-daterange input-group" id="datepicker">
                                    <input type="text" class="input-sm form-control" name="start" value="05/14/2014">
                                    <span class="input-group-addon">to</span>
                                    <input type="text" class="input-sm form-control" name="end" value="05/22/2014">
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-1 control-label">培训目的:</label>

                        <div class="col-lg-11"><textarea class="form-control" id="message" rows="5" placeholder="请输入备注内容 ..."></textarea></div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-1 control-label">参训人员:</label>

                        <div class="col-lg-11"><textarea class="form-control" id="message" rows="3" placeholder="请输入试题内容 ..."></textarea></div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-1 control-label">培训简介:</label>

                        <div class="col-lg-11"><textarea class="form-control" id="message" rows="5" placeholder="请输入备注内容 ..."></textarea></div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-1 control-label">审核意见:</label>

                        <div class="col-lg-11"><textarea class="form-control" id="message" rows="3" placeholder="请输入备注内容 ..."></textarea></div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-2"></div>
                        <div class="col-lg-3"><button type="button" class=" btn btn-w-m btn-outline btn-primary">审核通过</button></div>
                        <div class="col-lg-3"><button type="button" class=" btn btn-w-m btn-outline btn-primary">驳回</button></div>
                        <div class="col-lg-3"><button type="button" class=" btn btn-w-m btn-outline btn-primary">返回</button></div>
                        <div class="col-lg-1"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $('#data_5 .input-daterange').datepicker({
        keyboardNavigation: false,
        forceParse: false,
        autoclose: true
    });

</script>


