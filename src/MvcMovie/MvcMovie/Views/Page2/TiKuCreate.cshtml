
@{
    ViewBag.Title = "CreateTiKu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/css/plugins/datapicker/datepicker3.css" rel="stylesheet">
<link href="~/Content/css/plugins/daterangepicker/daterangepicker-bs3.css" rel="stylesheet">
<script src="~/Content/js/plugins/datapicker/bootstrap-datepicker.js"></script>
<div class="row">

    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>新增题库</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="form_basic.html#" aria-expanded="false">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="form_basic.html#">Config option 1</a>
                        </li>
                        <li>
                            <a href="form_basic.html#">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content" style="display: block;">
                <form class="form-horizontal">
                    <div class="form-group ">
                        <div class="col-lg-1"></div>
                        <label class="col-lg-1 control-label">试题标题:</label>
                        <div class="col-lg-4">
                            <input type="text" placeholder="" class="form-control">
                        </div>
                        <div class="col-lg-1"></div>
                        <label class="col-lg-1 control-label">试题类型:</label>
                        <div class="col-lg-4">
                            <select name="editable_length" aria-controls="editable" class="form-control input-sm">
                                <option value="10">--请选择--</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-lg-1"></div>
                        <label class="col-lg-1 control-label">所属部门:</label>
                        <div class="col-lg-4">
                            <input type="text" placeholder="" class="form-control">
                        </div>
                        <div class="col-lg-1"></div>
                        <label class="col-lg-1 control-label">试题级别:</label>
                        <div class="col-lg-4">
                            <select name="editable_length" aria-controls="editable" class="form-control input-sm">
                                <option value="10">--请选择--</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-lg-1"></div>
                        <label class="col-lg-1 control-label">出题人:</label>
                        <div class="col-lg-4">
                            <input type="text" placeholder="" class="form-control">
                        </div>
                        <div class="col-lg-1"></div>
                        <label class="col-lg-1 control-label">出题时间:</label>
                        <div class="col-lg-4">
                            <div class="form-group" id="data_1">

                                <div class="input-group date">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" class="form-control" value="03/04/2014">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">试题内容:</label>

                        <div class="col-lg-10"><textarea class="form-control" id="message" rows="5" placeholder="请输入试题内容 ..."></textarea></div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">备注:</label>

                        <div class="col-lg-10"><textarea class="form-control" id="message" rows="5" placeholder="请输入备注内容 ..."></textarea></div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">是否启用:</label>

                        <div class="col-lg-10"><input type="checkbox" placeholder="" class="left"></div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-3"></div>
                        <div class="col-lg-3"><button type="button" class=" btn btn-w-m btn-outline btn-primary">新增</button></div>
                        <div class="col-lg-1"></div>
                        <div class="col-lg-3"><button type="button" class=" btn btn-w-m btn-outline btn-primary">返回</button></div>
                        <div class="col-lg-2"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

<script type="text/javascript">
    $('#data_1 .input-group.date').datepicker({
        todayBtn: "linked",
        keyboardNavigation: false,
        forceParse: false,
        calendarWeeks: true,
        autoclose: true
    });

</script>       
